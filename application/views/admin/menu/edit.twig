{% extends "admin/index.twig" %}
 {% block scripts %}
     {{ parent() }}
     <script src="{{ Url.media('/media/js/admin/menu.js') }}" type="text/javascript"></script>
 {% endblock %}
{% block boody %}
    <div class="modal fade" id="portlet-config" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                    <h4 class="modal-title">Modal title</h4>
                </div>
                <div class="modal-body">
                    Widget settings form goes here
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn blue">Save changes</button>
                    <button type="button" class="btn default" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <h3 class="page-title">
                Меню <small>редактирование "<b>{{ _object.name }}</b>"</small>
            </h3>
            <ul class="page-breadcrumb breadcrumb">
                <li>
                    <i class="fa fa-home"></i>
                    <a href="{{ Url.site('/admin') }}">Рабочий стол</a>
                    <i class="fa fa-angle-right"></i>
                </li>
                <li>
                    <a href="{{ Url.site('/admin/menu') }}">Меню</a>
                    <i class="fa fa-angle-right"></i>
                </li>
                <li>
                    <a href="">{{ _object.name }}</a>
                </li>
            </ul>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="portlet">
                <div class="portlet-body">
                    <div class="table-container">
                        <div class="btn-group" style="margin-bottom: 10px;">
                            {#<a href="{{ Url.site('/admin/menu/create') }}" id="sample_editable_1_new" class="btn green">
                                Добавить <i class="fa fa-plus"></i>
                            </a>#}
                        </div>
                        <script>
                            $(document).ready(function(){
                                $('.admin-editable').editable({
                                    url: '/admin/menu/save',
                                    emptytext: 'Введите значение',
                                    select2: {
                                        placeholder: 'Введите значение',
                                        minimumInputLength: 2,
                                        width: 250
                                    }
                                });
                                $('.admin-editable-category').editable({
                                            url: '/admin/menu/save',
                                            source: '/admin/category/findname',
                                            emptytext: 'Введите значение',
                                            select2: {
                                                placeholder: 'Введите значение',
                                                minimumInputLength: 0,
                                                width: 250
                                            }
                                        });
                            });
                        </script>
                        <table class="table table-striped table-bordered table-hover" id='ajaxBlock'>
                            <tbody>
                                <tr role="row" class="heading">
                                    <th width="5%">Наименование</th>
                                    <th width="15%">На русском</th>
                                    <th width="10%">На английском</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr role="row" class="heading">
                                    <td width="5%">Категория</td>
                                    <td width="5%">
                                        <a href="#" data-type="select" id="cat_id" data-pk="{{ _object.id }}" data-title="Введите категорию" class="editable editable-click admin-editable-category">{{ _object.category.name }}</a>
                                    </td>
                                    <td width="5%"></td>
                                </tr>
                                <tr role="row" class="heading">
                                    <td width="5%">Название</td>
                                    <td width="5%">
                                        <a href="#" data-type="text" id="name" data-pk="{{ _object.id }}" data-title="Введите название" class="editable editable-click admin-editable">{{ _object.name }}</a>
                                    </td>
                                    <td width="5%">
                                        <a href="#" data-type="text" id="name_en" data-pk="{{ _object.id }}" data-title="Введите название на английском" class="editable editable-click admin-editable">{{ _object.name_en }}</a>
                                    </td>
                                    
                                </tr>
                                <tr>
                                    <td width="15%">Описание</td>
                                    <td width="5%">
                                        <a href="#" data-type="textarea" id="description" data-pk="{{ _object.id }}" data-title="Введите описание" class="editable editable-click admin-editable">{{ _object.description }}</a>
                                    </td>
                                    <td width="5%">
                                        <a href="#" data-type="textarea" id="description_en" data-pk="{{ _object.id }}" data-title="Введите описание на английском" class="editable editable-click admin-editable">{{ _object.description_en }}</a>
                                    </td>
                                </tr>
                                <tr>
                                    <td width="10%"> Выход</td>
                                    <td width="5%">
                                        <a href="#" data-type="text" id="heft" data-pk="{{ _object.id }}" data-title="Введите выход" class="editable editable-click admin-editable">{{ _object.heft }}</a>
                                    </td>
                                    <td width="10%"></td>
                                </tr>
                                <tr>
                                    <td width="10%">Цена</td>
                                    <td width="5%">
                                        <a href="#" data-type="text" id="price" data-pk="{{ _object.id }}" data-title="Введите цену" class="editable editable-click admin-editable">{{ _object.price }}</a>
                                    </td>
                                    <td width="10%"></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <a href="{{ Url.site('/admin/menu/delete/' ~ _object.id) }}"
                class="btn default btn-xs black admin-delete"
                data-question="Удалить блюдо "{{ _object.name}}"?"
                >
                 <i class="fa fa-trash-o"></i>
                 Удалить {{ _object.name}}
            </a>
            <!-- End: life time stats -->
        </div>
    </div>
                
{% endblock boody %}